[Unit]
Description=Exporter for HPC oriented metrics
Documentation=tbd
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
EnvironmentFile=
ExecStart=/opt/omnistat/venv/bin/python3 /opt/omnistat/node_monitoring.py /opt/omnistat/omnistat.config
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
