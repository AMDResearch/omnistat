[Unit]
Description=Exporter for HPC oriented metrics
Documentation=tbd
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
EnvironmentFile=
ExecStart=/usr/bin/python3 /opt/omniwatch/node_monitoring.py /opt/omniwatch/omniwatch.config
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
