[Unit]
Description=Exporter for HPC oriented metrics
Documentation=tbd
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
#EnvironmentFile=/etc/default/hpc-node-exporter
ExecStart=/usr/bin/node_monitoring.py $ARGS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
